        android:text="Ente"
        android:fontFamily="@font/pacifico"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Jim"
        android:layout_width="120dp"
        android:layout_height="50dp"
