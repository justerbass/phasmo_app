<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hoja"
    tools:context=".EnglishActivity">

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/homemade_regular"
        android:text="  ghost"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/homemade_regular"
        android:text=" Click on the ghost do you want to see :"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Espiritus"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/info1"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Spirit"
        android:fontFamily="@font/pacifico"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Poltergeists"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/Espiritus"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Poltergeist"
        android:textSize="11sp"
        android:fontFamily="@font/pacifico"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Pesadillas"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/Poltergeists"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Mare"
        android:fontFamily="@font/pacifico"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Demonios"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/Pesadillas"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Demon"
        android:fontFamily="@font/pacifico"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Yokais"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/Demonios"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Yokai"
        android:fontFamily="@font/pacifico"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Mylings"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/Yokais"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Myling"
        android:fontFamily="@font/pacifico"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Raijus"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/Mylings"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Raiju"
        android:fontFamily="@font/pacifico"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Morois"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/Raijus"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Moroi"
        android:fontFamily="@font/pacifico"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Espectros"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/info1"
        app:layout_constraintStart_toEndOf="@id/Espiritus"
        android:text="Wraith"
        android:fontFamily="@font/pacifico"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Banshees"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/Espectros"
        app:layout_constraintStart_toEndOf="@id/Poltergeists"
        android:text="Banshee"
        android:fontFamily="@font/pacifico"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Revenants"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/Banshees"
        app:layout_constraintStart_toEndOf="@id/Pesadillas"
        android:text="Revenant"
        android:fontFamily="@font/pacifico"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Yureis"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/Revenants"
        app:layout_constraintStart_toEndOf="@id/Demonios"
        android:text="Yurei"
        android:fontFamily="@font/pacifico"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Hantus"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/Yureis"
        app:layout_constraintStart_toEndOf="@id/Yokais"
        android:text="Hantu"
        android:fontFamily="@font/pacifico"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Onryos"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/Hantus"
        app:layout_constraintStart_toEndOf="@id/Mylings"
        android:text="Onryo"
        android:fontFamily="@font/pacifico"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Obakes"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/Onryos"
        app:layout_constraintStart_toEndOf="@id/Raijus"
        android:text="Obake"
        android:fontFamily="@font/pacifico"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Deogens"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/Obakes"
        app:layout_constraintStart_toEndOf="@id/Morois"
        android:text="Deogen"
        android:fontFamily="@font/pacifico"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Entes"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/info1"
        app:layout_constraintStart_toEndOf="@id/Espectros"
        android:text="Phanton"
        android:fontFamily="@font/pacifico"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Jims"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/Entes"
        app:layout_constraintStart_toEndOf="@id/Banshees"
        android:text="Jim"
        android:fontFamily="@font/pacifico"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Sombras"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/Jims"
        app:layout_constraintStart_toEndOf="@id/Revenants"
        android:text="Shade"
        android:fontFamily="@font/pacifico"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Onis"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/Sombras"
        app:layout_constraintStart_toEndOf="@id/Yureis"
        android:text="Oni"
        android:fontFamily="@font/pacifico"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Goryos"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/Onis"
        app:layout_constraintStart_toEndOf="@id/Hantus"
        android:text="Goryo"
        android:fontFamily="@font/pacifico"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Gemeloss"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/Goryos"
        app:layout_constraintStart_toEndOf="@id/Onryos"
        android:text="The Twins"
        android:fontFamily="@font/pacifico"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Mimicos"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/Gemeloss"
        app:layout_constraintStart_toEndOf="@id/Obakes"
        android:text="The Mimic"
        android:fontFamily="@font/pacifico"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Thayes"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/Mimicos"
        app:layout_constraintStart_toEndOf="@id/Deogens"
        android:text="Thaye"
        android:fontFamily="@font/pacifico"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>